@model WareHouseMVC.Models.User
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="pagetitle">
    <h1>
        Delete User</h1>
    <span>Are you sure you want to delete this?</span>
</div>

@{ bool isShow=Convert.ToBoolean(ViewData["isEnable"]);

   if (isShow == false)
   {
<div class="alert alert-error">
                	<button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Warning !</strong> This user is currently logged in.You cant not delete this user.
                </div>
   }
    if (isShow == true)
    {
    }
   }

@using (Html.BeginForm())
{
    <table class="table table-bordered table-invoice">
        <tbody>
            <tr>
                <td class="width30">
                    Name
                </td>
                <td>
                    @Model.FirstName @Model.LastName
                </td>
            </tr>
            <tr>
                <td class="width30">
                    User Name
                </td>
                <td>
                    @Model.Username
                </td>
            </tr>
            <tr>
                <td class="width30">
                    Email
                </td>
                <td>
                    @Model.Email
                </td>
            </tr>
            <tr>
                <td class="width30">
                    Mobile No
                </td>
                <td>
                    @Model.MobileNumber
                </td>
            </tr>
            <tr>
                <td class="width30">
                </td>
                <td>
                @{
    
              bool isEnable=Convert.ToBoolean(ViewData["isEnable"]);

              if (isEnable == false)
              {
                    <input type="submit" value="Delete" class="btn btn-danger" disabled="disabled"/>
              }
    if (isEnable == true)
    {
         <input type="submit" value="Delete" class="btn btn-danger"/>
    }
}
                </td>
            </tr>
        </tbody>
    </table>
    <p>
        @Html.ActionLink("Back to List", "UserList", "", new { @class = "btn" })
    </p>
}