@model IEnumerable<WareHouseMVC.Models.Zone>
@{
    ViewBag.Title = "Zone";
}
<div class="pagetitle">
    <h1>
        Zone List</h1>
    <span>List of Zones....</span>
</div>
<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
</p>
<br />
<div id="dyntable_wrapper" class="dataTables_wrapper" role="grid">

    <table class="table table-bordered" id="dyntable">
      <thead>
        <tr>
            <th>
            </th>
            <th>
                Zone Name
            </th>
            <th>
                Zone Code
            </th>
            <th>
                Floor
            </th>
            <th>
                WareHouse
            </th>
        </tr>
        </thead>
          <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.ZoneID }, new { @class = "icon-edit" })
                    |
                    @Html.ActionLink(" ", "Details", new { id = item.ZoneID }, new { @class = "icon-list-alt" })
                    |
                    @Html.ActionLink(" ", "Delete", new { id = item.ZoneID }, new { @class = "icon-trash" })
                    |
                   
                      @Html.ActionLink("Add Train", "CreateWithZN", "Trains", new { znid = item.ZoneID }, "")

                      |

                       @Html.ActionLink("Add Pallet", "CreateWithZN", "Pallets", new { znid = item.ZoneID }, "")
                </td>
                <td>
                    @item.ZoneName
                </td>
                <td>
                    @item.ZoneCode
                </td>
                <td>
                    @Html.DisplayTextFor(_ => item.Floor.FloorName).ToString()
                </td>
                <td>
                    @Html.DisplayTextFor(_ => item.Warehouse.WarehouseName).ToString()
                </td>
            </tr>
        }
        </tbody>
    </table>
    
</div>
