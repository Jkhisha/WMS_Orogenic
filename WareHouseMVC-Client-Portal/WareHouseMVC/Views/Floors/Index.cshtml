
@model PagedList.IPagedList<WareHouseMVC.Models.Floor>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Floors";
}
<div class="pagetitle">
    <h1>
        Floor List</h1>
    <span>List of Floors....</span>
</div>
<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
</p>
<br />

    
    
    <table class="table table-bordered">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Floor Name
            </th>
            <th>
                Floor Code
            </th>
            <th>
                Warehouse
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.FloorID }, new { @class = "icon-edit" })
                    |
                    @Html.ActionLink(" ", "Details", new { id = item.FloorID }, new { @class = "icon-list-alt" })
                    |
                    @Html.ActionLink(" ", "Delete", new { id = item.FloorID }, new { @class = "icon-trash" })
                    |
                     @Html.ActionLink("Add Zone", "CreateWithFl", "Zones", new { flid = item.FloorID }, "")
                </td>
                <td>
                    @item.FloorName
                </td>
                <td>
                    @item.FloorCode
                </td>
                <td>
                    @Html.DisplayTextFor(_ => item.Warehouse.WarehouseName).ToString()
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    
    
<br />
<div style="float:right">
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", 
    new { page}))
    </div>
