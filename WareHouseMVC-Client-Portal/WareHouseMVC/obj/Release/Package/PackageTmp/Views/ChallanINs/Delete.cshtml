@model WareHouseMVC.Models.ChallanIN

@{
    ViewBag.Title = "Delete";
}
<div class="pagetitle">
    <h1>
      Delete  </h1>
    <span>Are you sure you want to delete this?</span>
</div>

@using (Html.BeginForm()) {
<table class="table table-bordered table-invoice">
    <tbody>

  <tr>
        <td class="width30">ChallanBy</td>
        <td>
        @Model.ChallanBy
        </td>
        </tr>

    

  <tr>
        <td class="width30">Status</td>
        <td>
        @Model.Status
        </td>
        </tr>

    

  <tr>
        <td class="width30">ChallanDate</td>
        <td>
        @String.Format("{0:g}", Model.ChallanDate)
        </td>
        </tr>

    

  <tr>
        <td class="width30">Driver</td>
        <td>
        @(Model.Driver == null ? "None" : Model.Driver.Name)
        </td>
        </tr>

    

  <tr>
        <td class="width30">Vehicle</td>
        <td>
        @Html.DisplayTextFor(_ => Model.Vehicle).ToString()
        </td>
        </tr>

    

  <tr>
        <td class="width30">TransportVendor</td>
        <td>
        @(Model.TransportVendor == null ? "None" : Model.TransportVendor.Name)
        </td>
        </tr>

    

  <tr>
        <td class="width30">TransmittalINs</td>
        <td>
        @(Model.TransmittalINs == null ? "None" : Model.TransmittalINs.Count.ToString())
        </td>
        </tr>

    

 <tr>
         <td class="width30"></td>
        <td>
    <input type="submit" value="Delete" class="btn btn-danger" /> 
        </td>
        </tr>
		  </tbody>
        </table>
    <p>
       
      @Html.ActionLink("Back to List", "Index", "", new { @class = "btn" })
  
    </p>
}


