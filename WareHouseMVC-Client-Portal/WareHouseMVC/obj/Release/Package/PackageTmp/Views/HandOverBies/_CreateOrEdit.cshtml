@model WareHouseMVC.Models.HandOverBy

@* This partial view defines form fields that will appear when creating and editing entities *@

<table class="table table-bordered table-invoice">
 <tbody>

<tr>
    <td class="width30">
        Name
        <span style="color:red;">*</span>
    </td>
<td class="width70">
    <input type="text" value="@Model.Name" readonly="readonly" style="background-color: #f0f0f0; color: #6c757d; border: 1px solid #ccc;" />
    @Html.HiddenFor(model => model.Name)
</td>
</tr>

<tr>
    <td class="width30">
        Address
        <span style="color:red;">*</span>
    </td>
<td class="width70">
    <input type="text" value="@Model.Address" readonly="readonly" style="background-color: #f0f0f0; color: #6c757d; border: 1px solid #ccc;" />
    @Html.HiddenFor(model => model.Address)
</td>
</tr>

<tr>
    <td class="width30">
        Date
        <span style="color:red;">*</span>
    </td>
<td class="width70">
    <input id="HandOverByDate" type="date" name="Date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" />
</td>
</tr>

</tbody>
</table>
 
