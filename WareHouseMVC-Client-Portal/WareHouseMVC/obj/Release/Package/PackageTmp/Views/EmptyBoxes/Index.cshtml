@model IEnumerable<WareHouseMVC.Models.EmptyBox>
@{
    ViewBag.Title = "Empty Box Requisition";
}
<div class="pagetitle">
    <h1>
        Empty Box Requisition List</h1>
    <span>List of Empty Box Requisition....</span>
</div>
<p>
    @if (HttpContext.Current.User.IsInRole("Management"))
    {
    }
    else
    {

        @Html.ActionLink("New Requisition", "Create", "", new { @class = "btn btn-primary" })
    }
</p>
<div id="dyntable_wrapper" class="dataTables_wrapper" role="grid">
    <table class="table table-bordered" id="dyntable">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    Requisition Id
                </th>
                <th>
                    Requisition Date
                </th>
                <th>
                    No of Boxes
                </th>
                <th>
                    Department
                </th>
                <th>
                    Sub Dept.
                </th>
                <th>
                    Rceive By
                </th>
                <th>
                    Handover By
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                @if (HttpContext.Current.User.IsInRole("Management"))
                {
                    <td>
                    </td>
                }
                else
                {

                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.EmptyBoxId }, new { @class = "icon-edit" })
                        |
                        @Html.ActionLink(" ", "Details", new { id = item.EmptyBoxId }, new { @class = "icon-list-alt" })
                        |
                        @Html.ActionLink(" ", "Delete", new { id = item.EmptyBoxId }, new { @class = "icon-trash" })
                    </td>
                }
                <td>
                    @item.EmptyBoxNo
                </td>
                <td>
                    @String.Format("{0:g}", item.RecuisitionDate.ToShortDateString())
                </td>
                <td>
                    @item.NoofBoxes
                </td>
                <td>
                    @Html.DisplayTextFor(_ => item.Department.DepartmentName).ToString()
                </td>
                <td>
                    @Html.DisplayTextFor(_ => item.SubDepartment).ToString()
                </td>
                <td>
                    @item.DeliverTo
                </td>
                <td>
                    @item.ORBLOperator.Name
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
