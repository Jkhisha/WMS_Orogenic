<script type="text/javascript">
    jQuery(function ($) {
        $('input[type="submit"]').click(function (e) {
            if ($("select#DepartmentID").val() != "" && $("input[name='ContactPersontID']").val() == "") {
                e.preventDefault();
                alert("The department does not have a 'Contact Person'. Please reach out to the admin.");
                return;
            }

            if ($('#TemporaryRadio').is(':checked')) {
                var rearchiveDate = $('#RearchiveDate').val();
                var rearchiveTime = $('#RearchiveTime').val();

                if (!rearchiveDate || !rearchiveTime) {
                    e.preventDefault();
                    alert('Please select re-archive date and time.');
                }
            }
        });

    });

</script>


