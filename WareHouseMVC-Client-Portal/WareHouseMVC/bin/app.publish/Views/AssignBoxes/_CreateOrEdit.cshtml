        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.TransmittalINStatusId.ToString(),
        Selected = (Model != null) && (option.TransmittalINStatusId == Model.TransmittalINStatusId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.TransmittalINStatusId)
</td></tr>
</tbody>
</table>
 
