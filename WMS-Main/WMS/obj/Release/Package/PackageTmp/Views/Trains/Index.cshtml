@model IEnumerable<WareHouseMVC.Models.Train>

@{
    ViewBag.Title = "Trains";
}

<div class="pagetitle">
    <h1>
        Train List</h1>
    <span>List of Trains....</span>
</div>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
</p>
 <table class="table table-bordered" id="dyntable">
 <thead>
    <tr>
        <th></th>
        <th>
            TrainName
        </th>
        <th>
            TrainCode
        </th>
        <th>
            Zone
        </th>
        <th>
            Floor
        </th>
        <th>
            Warehouse
        </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.TrainID }, new { @class = "icon-edit" }) |
            @Html.ActionLink(" ", "Details", new { id = item.TrainID }, new { @class = "icon-list-alt" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.TrainID }, new { @class = "icon-trash" }) |
              @Html.ActionLink("Add Rack", "CreateWithTR", "Racks", new { trid = item.TrainID }, "")
        </td>
        <td>
			@item.TrainName
        </td>
        <td>
			@item.TrainCode
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Zone.ZoneName).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Floor.FloorName).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Warehouse.WarehouseName).ToString()
        </td>
    </tr>
}
</tbody>

</table>


