@model IEnumerable<WareHouseMVC.Models.AssignBoxTrViewModel>

@{
    ViewBag.Title = "Assign Boxes";
}

<div class="pagetitle">
    <h1>
      Asign Boxes List for Transmittal OUT</h1>
    <span>List of Asign Boxes....</span>
</div>

@using (Html.BeginForm("Index", "AssignBoxTrOUTs", FormMethod.Get, ""))
{
    <table class="table table-bordered table-invoice">
        <tbody>

            <tr>
                <td class="width30">
                    Transmittal OUT Number
                </td>
                <td>
                    <input id="TransmittalOutNo" type="text" name="TransmittalOutNo" ,value=@ViewBag.TransmittalOutNo />
                </td>
            </tr>
            <tr>
                <td class="width30"></td>
                <td class="width70">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </td>
            </tr>
        </tbody>
    </table>
}




<div id="dyntable_wrapper" class="dataTables_wrapper" role="grid">
 <table class="table table-bordered" id="dyntable5">
  <thead>
    <tr>
       
        <th>
            Transmittal OUT
        </th>
         <th>
            Transmittal Date
        </th>
        <th>
            Total Box
        </th>
        <th>
            Current Status
        </th>
        <th>
          Show
        </th>
       
     
    </tr>
	 </thead>
	  <tbody>
@foreach (var item in Model) {
    <tr>
       
        <td>
			@Html.DisplayTextFor(_ => item.TransmittalNo).ToString()
        </td>
         <td>
			@item.TransmittalDate.ToShortDateString()
        </td>
        <td>
			@item.TotalBox
        </td>
        <td>
			@item.Status
        </td>
      <td>
      @Html.ActionLink("Show Boxes", "ShowBoxes", "AssignBoxTrOUTs", new { trID=item.TransmittalOUTId},"")
      </td>
      
    </tr>
}
 </tbody>

</table>

</div>
