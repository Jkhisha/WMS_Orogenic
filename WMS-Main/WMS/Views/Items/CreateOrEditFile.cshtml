@model WareHouseMVC.Models.Item
@* This partial view defines form fields that will appear when creating and editing entities *@
<table class="table table-bordered table-invoice">
    <tbody>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.BoxNo)
            </td>
            <td class="width70">
                @Html.TextBoxFor(model => model.BoxNo, new { @maxlength = "10" })
                @Html.ValidationMessageFor(model => model.BoxNo)
            </td>
        </tr>
       
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.FileNumber)
            </td>
            <td class="width70">
                @Html.TextBoxFor(model => model.FileNumber)
                @Html.ValidationMessageFor(model => model.FileNumber)
            </td>
        </tr>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.FileDescription)
            </td>
            <td class="width70">
                @Html.TextAreaFor(model => model.FileDescription, 3, 5, "")
                @Html.ValidationMessageFor(model => model.FileDescription)
            </td>
        </tr>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.Year)
            </td>
            <td class="width70">
                @Html.EditorFor(model => model.Year)
                @Html.ValidationMessageFor(model => model.Year)
            </td>
        </tr>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.DestructionPeriod)
            </td>
            <td class="width70">
                <input id="datepicker" type="text" name="DestructionPeriod" />
            </td>
        </tr>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.ReferrenceNo)
            </td>
            <td class="width70">
                @Html.EditorFor(model => model.ReferrenceNo)
                @Html.ValidationMessageFor(model => model.ReferrenceNo)
            </td>
        </tr>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.RingNo)
            </td>
            <td class="width70">
                @Html.EditorFor(model => model.RingNo)
                @Html.ValidationMessageFor(model => model.RingNo)
            </td>
        </tr>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.AccountNo)
            </td>
            <td class="width70">
                @Html.EditorFor(model => model.AccountNo)
                @Html.ValidationMessageFor(model => model.AccountNo)
            </td>
        </tr>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.Locations)
            </td>
            <td class="width70">
                @Html.TextAreaFor(model => model.Locations, 3, 5, "")
                @Html.ValidationMessageFor(model => model.Locations)
            </td>
        </tr>
        <tr>
            <td class="width30">
                @Html.LabelFor(model => model.Comments)
            </td>
            <td class="width70">
                @Html.TextAreaFor(model => model.Comments, 3, 5, "")
                @Html.ValidationMessageFor(model => model.Comments)
            </td>
        </tr>
        <tr>
            <td class="width30">
                Re-Archieve
            </td>
            <td class="width70">
                @Html.CheckBoxFor(model => model.IsArchieve)
            </td>
        </tr>
    </tbody>
</table>
