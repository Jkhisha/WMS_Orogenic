@model WareHouseMVC.Models.BarcodeMapping

@* This partial view defines form fields that will appear when creating and editing entities *@

<table class="table table-bordered table-invoice">
 <tbody>

<tr>
<td class="width30">
    @Html.LabelFor(model => model.TransmittalNo)
</td>
<td class="width70">
    @Html.EditorFor(model => model.TransmittalNo)
    @Html.ValidationMessageFor(model => model.TransmittalNo)
</td>
</tr>

<tr>
<td class="width30">
    @Html.LabelFor(model => model.ClientName)
</td>
<td class="width70">
    @Html.EditorFor(model => model.ClientName)
    @Html.ValidationMessageFor(model => model.ClientName)
</td>
</tr>

<tr>
<td class="width30">
    @Html.LabelFor(model => model.DeptName)
</td>
<td class="width70">
    @Html.EditorFor(model => model.DeptName)
    @Html.ValidationMessageFor(model => model.DeptName)
</td>
</tr>

<tr>
<td class="width30">
    @Html.LabelFor(model => model.ImagePath)
</td>
<td class="width70">
    @Html.EditorFor(model => model.ImagePath)
    @Html.ValidationMessageFor(model => model.ImagePath)
</td>
</tr>

<tr>
<td class="width30">
    BarCode
</td>
<td class="width70">
    @Html.DropDownListFor(model => model.BarCodeId, ((IEnumerable<WareHouseMVC.Models.BarCode>)ViewBag.PossibleBarCodes).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.BarCodeId.ToString(),
        Selected = (Model != null) && (option.BarCodeId == Model.BarCodeId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.BarCodeId)
</td></tr>
<tr>
<td class="width30">
    Item
</td>
<td class="width70">
    @Html.DropDownListFor(model => model.ItemId, ((IEnumerable<WareHouseMVC.Models.Item>)ViewBag.PossibleItems).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.ItemId.ToString(),
        Selected = (Model != null) && (option.ItemId == Model.ItemId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.ItemId)
</td></tr>
</tbody>
</table>
 
