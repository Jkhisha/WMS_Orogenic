@model PagedList.IPagedList<WareHouseMVC.Models.Row>
    @using PagedList.Mvc;
    @{
        ViewBag.Title = "Rows";
    }

    <div class="pagetitle">
        <h1>
            Row List
        </h1>
        <span>List of Rows....</span>
    </div>
    <p>
        @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
    </p>

    
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        RowName
                    </th>
                    <th>
                        RowCode
                    </th>
                    <th>
                        Column
                    </th>
                    <th>
                        Height
                    </th>
                    <th>
                        Level
                    </th>
                    <th>
                        Rack
                    </th>
                    <th>
                        Train
                    </th>
                    <th>
                        Zone
                    </th>
                    <th>
                        Floor
                    </th>
                    <th>
                        Warehouse
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id = item.RowID }, new { @class = "icon-edit" }) |
                            @Html.ActionLink(" ", "Details", new { id = item.RowID }, new { @class = "icon-list-alt" }) |
                            @Html.ActionLink(" ", "Delete", new { id = item.RowID }, new { @class = "icon-trash" })
                        </td>
                        <td>
                            @item.RowName
                        </td>
                        <td>
                            @item.RowCode
                        </td>
                        <td>
                            @Html.DisplayTextFor(_ => item.Column.ColumnName).ToString()
                        </td>
                        <td>
                            @Html.DisplayTextFor(_ => item.Height.HeightName).ToString()
                        </td>
                        <td>
                            @Html.DisplayTextFor(_ => item.Level.LevelName).ToString()
                        </td>
                        <td>
                            @Html.DisplayTextFor(_ => item.Rack.RackName).ToString()
                        </td>
                        <td>
                            @Html.DisplayTextFor(_ => item.Train.TrainName).ToString()
                        </td>
                        <td>
                            @Html.DisplayTextFor(_ => item.Zone.ZoneName).ToString()
                        </td>
                        <td>
                            @Html.DisplayTextFor(_ => item.Floor.FloorName).ToString()
                        </td>
                        <td>
                            @Html.DisplayTextFor(_ => item.Warehouse.WarehouseName).ToString()
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <br />
        <div style="float:right">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>

   
